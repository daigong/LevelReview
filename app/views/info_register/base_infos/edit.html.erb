<%= content_for :javascript do %>
    <script type="text/javascript">
        $(function() {
            var validators = window['edit_info_register_base_info_1'].validators
            //增加验证规则
            validators["person_name"] = {"presence":{"message":"\u8be5\u5b57\u6bb5\u4e0d\u80fd\u4e3a\u7a7a"}}
            validators["department_id"] = {"presence":{"message":"\u8be5\u5b57\u6bb5\u4e0d\u80fd\u4e3a\u7a7a"}}
        });
    </script>
<% end %>
<h3>基本信息</h3>
<%= semantic_form_for @info_register_base_info,
                      :url=> info_register_base_info_path(curr_activity, @info_register_base_info),
                      :validate=>true do |f| %>
    <%= f.inputs do %>
        <%= semantic_extra_input :person_name, :label=>'姓名', :value=>@info_register_base_info.owner.person_name %>
        <%= semantic_extra_select :department_id, department_options(@info_register_base_info.owner.department.id), :label=>'部门' %>
        <%= f.input :nation, :label=>'民族' %>
        <%= f.input :sex, :label=>'性别' %>
        <%= f.input :birthday, :label=>'出生年月' %>
        <%= f.input :last_review_time, :label=>'评审时间' %>
        <%= f.input :invite_time, :label=>'聘任时间' %>
        <%= f.input :degree, :label=>'学位' %>
        <%= f.input :edu_background, :label=>'学历' %>
        <%= f.input :current_level, :label=>'当前级别' %>
        <%= f.input :advance_level, :label=>'晋升级别' %>
        <%= f.input :review_type, :label=>'评审类型' %>
        <%= f.input :computer_exam, :label=>'计算机考试' %>
        <%= f.input :computer_exam_file_name %>
        <%= f.input :foreign_exam, :label=>'外语考试' %>
        <%= f.input :foreign_exam_file_name %>
    <% end %>
    <%= f.buttons do %>
        <%= f.commit_button :label=>"保存" %>
    <% end %>
<% end %>



